@model IEnumerable<Webshop.Models.Order>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>
    @Webshop.Resources.Common.History
</h3>

    @foreach (var item in Model)
    {


        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading">@item.Date</div>
            <div class="panel-body">
                <p> @item.amount </p>
            </div>

            <!-- Table -->
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().OrdersItems.First().MenuItem.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().OrdersItems.First().Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().OrdersItems.First().MenuItem.Price)
                    </th>
                </tr>
                @foreach (var orderItem in item.OrdersItems)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => orderItem.MenuItem.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => orderItem.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => orderItem.MenuItem.Price)
                    </td>
                </tr>

                }
            </table>
        </div>
    }

