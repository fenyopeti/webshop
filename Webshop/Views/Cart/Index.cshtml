@model IEnumerable<Webshop.Models.CartItem>


<h2>My Shopping Cart</h2>

<p>
    @Html.ActionLink("Delete the cart", "Delete")
</p>
<p>
    Price of products in your cart: @ViewBag.Amount HUF
    @Html.ActionLink("Checkout cart", "Checkout")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MenuItem.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MenuItem.Price)
        </th>
        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MenuItem.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuItem.Price)
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteFromCart", new { id = item.MenuItemId }, null)
            </td>
        </tr>
    }
    </table>